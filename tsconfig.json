{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "declaration": true,
    "declarationDir": "typings",
    "sourceMap": true,
    "removeComments": false,
  },
  "files": [
    ".eslintrc.js",
    "jest.config.js",
  ],
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
}