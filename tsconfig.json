{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "removeComments": false,
    "jsx": "react-jsx",
    "lib": [
      "esnext",
      "dom",
    ],
  },
  "include": [
    "src",
    "test",
    "typings",
  ],
}